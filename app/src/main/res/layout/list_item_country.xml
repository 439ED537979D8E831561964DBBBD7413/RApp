<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/linear_root_item_country"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.rawalinfocom.rcontact.helper.RippleView
        android:id="@+id/ripple_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_alpha="@integer/alpha_ripple"
        app:rv_centered="true"
        app:rv_color="@color/colorPrimary"
        app:rv_rippleDuration="@integer/duration_ripple">

        <TextView
            android:id="@+id/text_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorVeryDarkGrayishBlue2"
            tools:text="India (+91)"/>

    </com.rawalinfocom.rcontact.helper.RippleView>

    <include layout="@layout/divider_recycler_view"/>

</LinearLayout>