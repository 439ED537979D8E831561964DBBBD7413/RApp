<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_root_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawalinfocom.rcontact.contacts.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/str_content_description"
                tools:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/text_label_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="Change Profile Picture"/>

            <LinearLayout
                android:id="@+id/linear_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_label_profile_image"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Name"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_name_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_name_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_name_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_name"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Phone"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_phone_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_phone_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_phone_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_phone_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_phone_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_phone"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Email"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_email_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_email_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_email_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_email_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_email_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_email"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_organization"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_organization_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_organization_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_organization_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_organization_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_organization_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_organization"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_website"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_website_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_website_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_website_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_website_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_website_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_website"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_address"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_address_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_address_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_address_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_address_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_address_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_social_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_address"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_social_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Social Connect"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_social_contact_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_social_contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_social_contact_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_social_contact_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_social_contact_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_social_contact"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_event"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_event_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_event_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_event_add_field"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="Add Field"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_event_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_event_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_event"
                android:layout_marginTop="@dimen/margin_tiny"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_label_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/str_gender"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/image_gender_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/str_content_description"
                        android:src="@drawable/ic_arrow_bottom"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_gender_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_tiny"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_gender_update"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginEnd="@dimen/margin_tiny"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Update"
                        android:textColor="@color/colorWhite"/>

                    <Button
                        android:id="@+id/button_gender_cancel"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="@dimen/margin_10dp"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginStart="@dimen/margin_tiny"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGray"
                        android:text="@string/action_cancel"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
